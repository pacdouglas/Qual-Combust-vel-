<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    tools:context="br.com.douglaspac.qualcombustivel.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alcool"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_etanol_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:np_formatter="%d,"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_etanol_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_etanol_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_etanol_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="@string/calc"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gas"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_below="@id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_gasolina_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:np_formatter="%d,"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_gasolina_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_gasolina_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>


        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/nmb_pick_gasolina_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/primary_light"/>
    </LinearLayout>


</RelativeLayout>
